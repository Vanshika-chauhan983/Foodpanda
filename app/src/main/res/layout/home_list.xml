<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_icon"
                android:id="@+id/recyclerImage"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/recyclerimage">
            </ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/text"
                android:layout_toEndOf="@id/recyclerImage"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:padding="2dp"
                android:layout_marginTop="12dp"
                android:id="@+id/rv_textview"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/text"
                android:layout_toEndOf="@id/recyclerImage"
                android:layout_below="@+id/rv_textview"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:padding="2dp"
                android:id="@+id/rv_textview2"/>

            <ImageView
                android:id="@+id/views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/views"
                android:layout_toEndOf="@+id/rv_textview"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"/>

            <ImageButton
                android:id="@+id/FavRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fav_restaurant"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_toEndOf="@+id/views"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/viewcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/rv_textview"
                android:layout_below="@+id/FavRestaurant"
                android:text="1.2k"
                android:textColor="@color/black" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>